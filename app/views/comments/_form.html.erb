<%= form_with model: [@anti_habit, @comment || Comment.new], local: true, class: "space-y-4" do |form| %>
  <!-- エラーメッセージ -->
  <% if @comment&.errors&.any? %>
    <div class="bg-red-500/20 border border-red-300/50 rounded-lg p-4 backdrop-blur-sm mb-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-200" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-100">入力内容を確認してください</h3>
          <div class="mt-2 text-sm text-red-200">
            <ul class="list-disc list-inside space-y-1">
              <% @comment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- コメント入力 -->
  <div class="space-y-2">
    <%= form.label :body, "応援メッセージ", class: "block text-sm font-medium text-white glass-text-shadow" %>
    <%= form.text_area :body, 
        rows: 4,
        class: "glass-input w-full px-4 py-3 text-white placeholder:text-white/60 transition-colors text-base resize-none",
        placeholder: "頑張っていますね！応援しています！",
        maxlength: 500 %>
    <div class="flex justify-between items-center">
      <p class="text-xs text-white/60">
        最大500文字
      </p>
    </div>
  </div>

  <!-- 送信ボタン -->
  <div class="flex justify-end">
    <%= form.submit "応援メッセージを送る", 
        class: "glass-button bg-green-500/30 border border-green-300/50 text-white font-medium py-2 px-6 rounded-lg transition-all duration-300 text-sm focus:outline-none hover:bg-green-500/40" %>
  </div>
<% end %>