<%= form_with model: anti_habit, local: true, class: "space-y-6" do |form| %>
  <!-- エラーメッセージ -->
  <% if anti_habit.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">入力内容を確認してください</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% anti_habit.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- タイトル -->
  <div class="space-y-2">
    <%= form.label :title, "悪習慣のタイトル", class: "block text-sm font-medium text-gray-900" %>
    <div class="relative">
      <%= form.text_field :title, 
          class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors text-base",
          placeholder: "例：休日の前日につい夜更かししてしまう",
          maxlength: 20 %>
    </div>
    <p class="text-sm text-gray-600">
      やめたい習慣を具体的で分かりやすいタイトルで入力してください
    </p>
  </div>

  <!-- 説明 -->
  <div class="space-y-2">
    <%= form.label :description, "詳細説明", class: "block text-sm font-medium text-gray-900" %>
    <%= form.text_area :description, 
        rows: 5,
        class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors text-base resize-none",
        placeholder: "例：明日も早いのについYouTubeやSNSを見てしまい、気づくと深夜になっています。翌日眠くて仕事に集中できません。この習慣をやめて、規則正しい生活を送りたいです。",
        maxlength: 80 %>
    <div class="flex justify-between items-center">
      <p class="text-sm text-gray-600">
        なぜその習慣をやめたいのか、どんな時に起こりやすいかなど詳しく教えてください
      </p>
    </div>
  </div>
  <!-- 送信ボタン -->
  <div class="flex flex-col sm:flex-row gap-3 pt-4">
    <%= form.submit anti_habit.persisted? ? "更新する" : "登録する", 
        class: "flex-1 bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-lg transition-colors text-base focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
    <%= link_to "キャンセル", anti_habit.persisted? ? anti_habit_path(anti_habit) : anti_habits_path, 
        class: "flex-1 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-3 px-6 rounded-lg transition-colors text-base text-center focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2" %>
  </div>
<% end %>
