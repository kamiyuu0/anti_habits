<div class="glass-card p-4 mb-4 hover:-translate-y-1 hover:bg-white/20 hover:scale-102 transition-all duration-300">
  <!-- ヘッダー部分：ユーザー名と作成日 -->
  <div class="flex items-center justify-between mb-3">
    <div class="flex items-center">
      <div class="w-8 h-8 bg-white/20 rounded-full flex items-center justify-center mr-3 border border-white/30">
        <span class="text-xs font-semibold text-white glass-text-shadow"><%= anti_habit.user.name.first %></span>
      </div>
      <span class="text-sm text-white/90 glass-text-shadow"><%= anti_habit.user.name %></span>
    </div>
  </div>

  <!-- タイトル -->
  <h3 class="font-semibold text-white text-lg mb-2 leading-tight text-shadow">
    <%= link_to anti_habit.title, anti_habit_path(anti_habit), class: "text-white hover:text-white/90 transition-colors no-underline" %>
    ：連続で<%= anti_habit.consecutive_days_achieved %>日達成！！
  </h3>

  <!-- 説明文（省略表示） -->
  <% if anti_habit.description.present? %>
    <p class="text-white/80 text-sm mb-3 line-clamp-2 glass-text-shadow">
      <%= truncate(anti_habit.description, length: 80) %>
    </p>
  <% end %>

  <%= render "shared/reaction_button", anti_habit: anti_habit %>

</div>