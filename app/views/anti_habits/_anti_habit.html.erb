<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 mb-4 hover:shadow-md transition-shadow duration-200">
  <!-- ヘッダー部分：ユーザー名と作成日 -->
  <div class="flex items-center justify-between mb-3">
    <div class="flex items-center">
      <div class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center mr-3">
        <span class="text-xs font-semibold text-gray-600"><%= anti_habit.user.name.first %></span>
      </div>
      <span class="text-sm text-gray-600"><%= anti_habit.user.name %></span>
    </div>
  </div>

  <!-- タイトル -->
  <h3 class="font-semibold text-gray-900 text-lg mb-2 leading-tight">
    <%= link_to anti_habit.title, anti_habit_path(anti_habit), class: "hover:text-blue-600 transition-colors" %>
  </h3>

  <!-- 説明文（省略表示） -->
  <% if anti_habit.description.present? %>
    <p class="text-gray-600 text-sm mb-3 line-clamp-2">
      <%= truncate(anti_habit.description, length: 80) %>
    </p>
  <% end %>
</div>