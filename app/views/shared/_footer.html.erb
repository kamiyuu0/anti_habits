<footer class="footer-glass fixed bottom-0 left-0 right-0">
  <nav class="flex justify-around items-center py-2">
    <!-- ホーム -->
    <%= link_to (user_signed_in? ? anti_habits_path : root_path), class: "flex flex-col items-center py-2 px-4 text-white/90 hover:text-white hover:scale-105 transition-all duration-300 glass-text-shadow" do %>
      <div class="w-6 h-6 mb-1 glass-icon">
        <svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full">
          <path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/>
        </svg>
      </div>
      <span class="text-xs">ホーム</span>
    <% end %>

    <!-- 新規登録 / 新規投稿 -->
    <% if user_signed_in? %>
      <%= link_to new_anti_habit_path, class: "flex flex-col items-center py-2 px-4 text-white/90 hover:text-white hover:scale-105 transition-all duration-300 glass-text-shadow" do %>
        <div class="w-6 h-6 mb-1 glass-icon">
          <svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full">
            <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
          </svg>
        </div>
        <span class="text-xs">新規投稿</span>
      <% end %>
    <% else %>
      <%= link_to new_user_registration_path, class: "flex flex-col items-center py-2 px-4 text-white/90 hover:text-white hover:scale-105 transition-all duration-300 glass-text-shadow" do %>
        <div class="w-6 h-6 mb-1 glass-icon">
          <svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full">
            <path d="M15 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm-9-2V7H4v3H1v2h3v3h2v-3h3v-2H6zm9 4c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
          </svg>
        </div>
        <span class="text-xs">新規登録</span>
      <% end %>
    <% end %>

    <!-- ログイン / マイページ -->
    <% if user_signed_in? %>
      <%= link_to user_path(current_user), class: "flex flex-col items-center py-2 px-4 text-white/90 hover:text-white hover:scale-105 transition-all duration-300 glass-text-shadow" do %>
        <div class="w-6 h-6 mb-1 glass-icon">
          <svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full">
            <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
          </svg>
        </div>
        <span class="text-xs">マイページ</span>
      <% end %>
    <% else %>
      <%= link_to new_user_session_path, class: "flex flex-col items-center py-2 px-4 text-white/90 hover:text-white hover:scale-105 transition-all duration-300 glass-text-shadow" do %>
        <div class="w-6 h-6 mb-1 glass-icon">
          <svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full">
            <path d="M11 7L9.6 8.4l2.6 2.6H2v2h10.2l-2.6 2.6L11 17l5-5-5-5zm9 12h-8v2h8c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2h-8v2h8v12z"/>
          </svg>
        </div>
        <span class="text-xs">ログイン</span>
      <% end %>
    <% end %>
  </nav>
</footer>