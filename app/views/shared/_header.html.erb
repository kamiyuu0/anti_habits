<header class="bg-white border-b border-gray-200 px-4 py-3 fixed top-0 left-0 right-0 z-50">
  <div class="flex items-center justify-between">
    <!-- 中央のアイコン -->
    <div class="flex items-center justify-center">
      <div class="w-12 h-12 bg-gray-300 rounded-full flex items-center justify-center">
        <span class="text-gray-600 text-sm font-medium">icon</span>
      </div>
    </div>

    <!-- 右側のハンバーガーメニュー -->
    <div class="relative group">
      <!-- ハンバーガーボタン（チェックボックスを隠しトリガーとして使用） -->
      <input type="checkbox" id="menu-toggle" class="peer hidden">
      <label for="menu-toggle" class="flex flex-col justify-center items-center w-8 h-8 space-y-1 hover:bg-gray-100 rounded transition-colors cursor-pointer">
        <span class="block w-6 h-0.5 bg-gray-800 transition-all duration-300 peer-checked:rotate-45 peer-checked:translate-y-2"></span>
        <span class="block w-6 h-0.5 bg-gray-800 transition-all duration-300 peer-checked:opacity-0"></span>
        <span class="block w-6 h-0.5 bg-gray-800 transition-all duration-300 peer-checked:-rotate-45 peer-checked:-translate-y-2"></span>
      </label>

      <!-- ドロップダウンメニュー -->
      <nav class="absolute top-full right-0 mt-2 w-48 bg-white rounded-lg shadow-xl border border-gray-200 py-2 
                  opacity-0 invisible scale-95 transition-all duration-200 origin-top-right
                  peer-checked:opacity-100 peer-checked:visible peer-checked:scale-100">
        <a href="#" class="block px-4 py-2 text-sm text-gray-800 hover:bg-gray-100 transition-colors">お問い合わせ</a>
        <a href="#" class="block px-4 py-2 text-sm text-gray-800 hover:bg-gray-100 transition-colors">利用規約</a>
        <a href="#" class="block px-4 py-2 text-sm text-gray-800 hover:bg-gray-100 transition-colors">プライバシーポリシー</a>
        
        <% if user_signed_in? %>
          <%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete }, class: 'block px-4 py-2 text-sm text-gray-800 hover:bg-gray-100 transition-colors' %>
        <% else %>
          <%= link_to 'ログイン', new_user_session_path, class: 'block px-4 py-2 text-sm text-gray-800 hover:bg-gray-100 transition-colors' %>
          <%= link_to '新規登録', new_user_registration_path, class: 'block px-4 py-2 text-sm text-gray-800 hover:bg-gray-100 transition-colors' %>
        <% end %>
      </nav>
    </div>
  </div>
</header>